{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": true,
    "strict": false,
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "/src/@types"
    ],
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}