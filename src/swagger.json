{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX API Documentation",
    "description": "Rent your car API",
    "version": "1.0.0",
    "contact": {
      "email": "murieldps@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category Routes"],
        "summary": "Create a car category.",
        "description": "Creating a new car category.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Car category name",
                  "description": "Car category description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists."
          }
        }
      },
      "get": {
        "tags": ["Category Routes"],
        "summary": "List all car categories.",
        "description": "Listing all car categories in your database.",
        "responses": {
          "200": {
            "description": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}